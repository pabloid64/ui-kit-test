{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "types": ["../types"]
    },
    "types": [
      "@types/node",
    ]
  },
  "exclude": ["node_modules", "lib", "tmp" ]
}
